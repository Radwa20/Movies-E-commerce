@model List<Movie>
@{
	ViewData["Title"] = "AdminDashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<title>@ViewData["Title"]</title>
<br />


<section class="w3l-grids">
    <div class="grids-main py-5">
        <div class="container py-lg-4">
            <div class="headerhny-title">
                <div class="w3l-title-grids">
                    <div class="headerhny-left">
                        <h3 class="hny-title">Our Movies</h3>
                    </div>

                </div>
            </div>
            <div class="w3l-populohny-grids">
                @foreach (var movie in Model)
                {
                    <div class="item vhny-grid">

                        <div class="box16 mb-0">

                            <a href="#">
                                <figure>
                                    <img class="img-fluid" src="@movie.ImageURL" alt="">
                                </figure>
                                <div class="box-content">

                                    <h3 class="title">@movie.Title</h3>
                                    <h4>
                                        <span class="post"><span class="fa fa-clock-o"> </span>@movie.Duration</span>
                                        <span class="post fa fa-heart text-right"></span>
                                    </h4>
        
              </div>
                                <span class="fa fa-play video-icon" aria-hidden="true"></span>
                            </a>
                        </div><div class="icon-container d-flex justify-content-between">
                            
                   <div>
    <br/>
    <a href="@Url.Action("OneMovies", "Admin",new { Id = movie.Id})">
        <button type="button" class="btn" style="min-width: 170px; background-color: #df0e62; color: white;">Details</button>
    </a>
</div>


                    <div>
                        <br/>
                         <a href="@Url.Action("EditMovie", "Admin", new { id = movie.Id })" >
                            <button type="button" class="btn btn-info" style="min-width: 70px;">Edit</button>
                        </a>
                    </div>
                </div>


                    </div>
                }
            
            </div>
        </div>
        <div class="button-center text-center mt-3">
            <a href="#" class="btn view-button">View all <span class="fa fa-angle-double-right ml-2"
                    aria-hidden="true"></span></a>
        </div>
    </div>
</section>
